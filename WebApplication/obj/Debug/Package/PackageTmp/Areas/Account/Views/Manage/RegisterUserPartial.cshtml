@using HRM.Webpages.Helpers
@model HRM.Accounts.Models.RegisterUserModel

@if ("RegisterUser".Equals(ViewContext.RouteData.Values["Action"])) {
    @Html.StatusMessage(ViewData["Message"])
    @Html.LocationAnchor("tabsEditUserRegister")
}

@using (Html.BeginForm("RegisterUser", "Manage", FormMethod.Post, new { id = "registerUserForm" }))
{
@Html.ValidationMessage("RegisterUser")
@Html.ValidationInfo()
<fieldset>
    <legend>Registration Form</legend>
    <ol>
        @Html.Hidden("gridId")
        <li>
            @Html.LabelFor(m => m.Account)
            @Html.TextBoxFor(m => m.Account)
        </li>
        <li>
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
        </li>
        <li>
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword)
        </li>
    </ol>
    <input type="submit" value="Create new account" />
</fieldset>
}
<script>
function registerUser(gridId) {
    $("#registerUserForm").find("#gridId").val(gridId);
}
</script>
