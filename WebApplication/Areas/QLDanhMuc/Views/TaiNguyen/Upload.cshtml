@using HRM.Webpages.Helpers
@using HRM.QLDanhMuc.Models
@model HRM.Databases.Models.TaiNguyen
@{
    ViewBag.Title = "Upload";
}
@Html.BeginDiv()

<h2>Upload</h2>

@using (Html.BeginForm("Upload", "TaiNguyen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.idTaiNguyen)
    @Html.HiddenFor(model => model.tenTaiNguyen)
    @Html.HiddenFor(model => model.laThuMuc)
    
    <p>@Model.getFolder()</p>

    @Html.LabelFor(model => model.tepDinhKem)
    @Html.TextBoxFor(model => model.tepDinhKem, new { type = "file" })
    @Html.ValidationMessageFor(model => model.tepDinhKem)

    <p>
        <input type="submit" value="Save" />
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@Html.EndDiv()