@using HRM.Webpages.Helpers
@model HRM.Databases.Models.dmPhuongXa

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>dmPhuongXa</legend>

        <input type="hidden" id="idQuanHuyen" value="@ViewBag.QuanHuyen.id" />

        <div class="editor-label">
            @Html.LabelFor(model => model.maPhuongXa, "Mã")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.maPhuongXa)
            @Html.ValidationMessageFor(model => model.maPhuongXa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.tenPhuongXa, "Tên " + Html.VN("PhuongXa"))
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tenPhuongXa)
            @Html.ValidationMessageFor(model => model.tenPhuongXa)
        </div>

        <div class="editor-label">
            <label>@ViewBag.QuanHuyen.tenQuanHuyen,</label>
            <label>@ViewBag.QuanHuyen.dmTinhThanh.tenTinhThanh</label>
        </div>
        <p>
            <input class="dialog" type="submit" value="Lưu" />
        </p>
    </fieldset>
}