@using HRM.Webpages.Helpers
@model IEnumerable<HRM.QLDanhMuc.Models.DanhMuc>
@{
    var DM = ViewBag.DanhMuc as string;
}

<p>
    <a class="dialog" href="DanhMuc/Create/@(DM)" title="Thêm">Thêm @Html.VN(DM)</a>
</p>
<table id="list@(DM)">
<thead>
    <tr>
        <th>STT</th>
        <th>Mã</th>
        <th>Tên @Html.VN(DM)</th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.stt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maDanhMuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tenDanhMuc)
        </td>
        <td align="right">
            <a class="dopost" href="DanhMuc/Delete/@(DM)/@item.id" title="Xóa"><span class="ui-icon ui-icon-trash" style="display:inline-block"/></a>
            <a class="dialog" href="DanhMuc/Edit/@(DM)/@item.id" title="Sửa"><span class="ui-icon ui-icon-pencil" style="display:inline-block"/></a>
        </td>
    </tr>
}
</tbody>
</table>

<script>
    @Html.dataTables("list" + DM)
</script>