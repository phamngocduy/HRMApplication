@using HRM.Webpages.Helpers
@model HRM.QLDanhMuc.Models.DanhMuc
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
@{
    var DM = ViewBag.DanhMuc as string;
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>dm@(DM)</legend>

        @Html.Hidden("dm", DM)
        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.maDanhMuc, "Mã")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.maDanhMuc)
            @Html.ValidationMessageFor(model => model.maDanhMuc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.tenDanhMuc, "Tên " + Html.VN(DM))
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tenDanhMuc)
            @Html.ValidationMessageFor(model => model.tenDanhMuc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.stt, "Số thứ tự")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.stt)
            @Html.ValidationMessageFor(model => model.stt)
        </div>

        <p>
            <input class="dialog" type="submit" value="Lưu" />
        </p>
    </fieldset>
}
