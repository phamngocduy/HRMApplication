@using HRM.Databases.Models
@model HRM.Databases.Models.dmQuyetDinh

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset id="QuyetDinh">
        <legend>dmBangLuong</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaQuyetDinh, "Số quyết định")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaQuyetDinh)
            @Html.ValidationMessageFor(model => model.MaQuyetDinh)
        </div>

        @Html.LabelFor(model => model.NgayKy, "Ngày ký")
        @Html.EditorFor(model => model.NgayKy)
        @Html.ValidationMessageFor(model => model.NgayKy)
        <br />
        @Html.LabelFor(model => model.NgayApDung, "Ngày áp dụng")
        @Html.EditorFor(model => model.NgayApDung)
        @Html.ValidationMessageFor(model => model.NgayApDung)
        <br />
        @Html.LabelFor(model => model.NgayKetThuc, "Ngày kết thúc")
        @Html.EditorFor(model => model.NgayKetThuc)
        @Html.ValidationMessageFor(model => model.NgayKetThuc)

        <div class="editor-label">
            @Html.LabelFor(model => model.NoiDung, "Nội dung")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoiDung)
            @Html.ValidationMessageFor(model => model.NoiDung)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GhiChu, "Ghi chú")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GhiChu)
            @Html.ValidationMessageFor(model => model.GhiChu)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LoaiQuyetDinh_id, "Loại quyết định")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LoaiQuyetDinh_id", String.Empty)
            @Html.ValidationMessageFor(model => model.LoaiQuyetDinh_id)
        </div>

        <p>
            <input class="dialog" type="submit" value="Lưu" />
        </p>
    </fieldset>
}

<script>
    $(function () {
        $("#QuyetDinh").find("label[for^=Ngay]").css("display", "inline");
        $("#QuyetDinh").find("input[type=datetime]").css("display", "inline")
            .datepicker({ changeMonth: true, changeYear: true, }).width("80px");
        $("#QuyetDinh").find("#NoiDung").val("V/v");
        $("#QuyetDinh").find("#MaQuyetDinh").val("/QĐ-VL").focus()[0].setSelectionRange(0,0);
    });
</script>