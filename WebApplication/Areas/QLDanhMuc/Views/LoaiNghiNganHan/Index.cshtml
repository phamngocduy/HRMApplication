@using HRM.Webpages.Helpers
@using HRM.QLDanhMuc.Models
@model IEnumerable<HRM.Databases.Models.dmLoaiNghiNganHan>

<p>
    <a class="dialog" href="LoaiNghiNganHan/Create" title="Thêm">Thêm loại nghỉ ngắn hạn</a>
</p>
<table id="listLoaiNghiNganHan">
<thead>
    <tr>
        <th></th>
        <th>Mã</th>
        <th>Loại nghỉ</th>
        <th><mark data-tip="Tính thâm niên">TNS</mark></th>
        <th><mark data-tip="Không hưởng lương">KHL</mark></th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.stt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maLoaiNghiNganHan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tenLoaiNghiNganHan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tinhThamNien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.khongHuongLuong)
        </td>
        <td align="right">
            <a class="dopost" href="LoaiNghiNganHan/Delete?id=@item.id" title="Xóa"><span class="ui-icon ui-icon-trash" style="display:inline-block"/></a>
            <a class="dialog" href="LoaiNghiNganHan/Edit?id=@item.id" title="Sửa"><span class="ui-icon ui-icon-pencil" style="display:inline-block"/></a>
        </td>
    </tr>
}
</tbody>
</table>
<script>
    @Html.dataTables("listLoaiNghiNganHan")
</script>
