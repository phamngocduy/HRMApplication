@model HRM.Databases.Models.dmNgachVienChuc

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>dmNgachVienChuc</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.maNgachVienChuc, "Mã ngạch")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.maNgachVienChuc)
            @Html.ValidationMessageFor(model => model.maNgachVienChuc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.tenNgachVienChuc, "Tên ngạch")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.tenNgachVienChuc)
            @Html.ValidationMessageFor(model => model.tenNgachVienChuc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nhomNgachVienChuc, "Nhóm ngạch")
        </div>
        <div class="editor-field">
            @Html.DropDownList("nhomNgachVienChuc", String.Empty)
            @Html.ValidationMessageFor(model => model.nhomNgachVienChuc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.stt, "Số thứ tự")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.stt)
            @Html.ValidationMessageFor(model => model.stt)
        </div>

        <p>
            <input class="dialog" type="submit" value="Lưu" />
        </p>
    </fieldset>
}
