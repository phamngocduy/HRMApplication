@using HRM.Webpages.Helpers
@using HRM.QLDanhMuc.Models
@model IEnumerable<HRM.Databases.Models.dmBangLuong>

<p>
    @Html.DropDownList("dmNhomNgach", "Chọn nhóm ngạch viên chức")
    <a class="dialog" href="BangLuong/Create?nhom=@ViewBag.dmNhomNgach.SelectedValue" title="Thêm">Thêm hệ số lương</a>
</p>
<table id="listBangLuong">
<thead>
    <tr>
        <th>Bậc</th>
        <th>Hệ số</th>
        <th>Phụ cấp</th>
        <th>Số tháng</th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.bacLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hesoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phuCap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.soThang)
        </td>
        <td align="right" nowrap>
            <a class="dopost" href="BangLuong/Delete?id=@item.id" title="Xóa"><span class="ui-icon ui-icon-trash" style="display:inline-block"/></a>
            <a class="dialog" href="BangLuong/Edit?id=@item.id" title="Sửa"><span class="ui-icon ui-icon-pencil" style="display:inline-block"/></a>
        </td>
    </tr>
}
</tbody>
</table>
<script>
    @Html.dataTables("listBangLuong")
    $(function() {
        $("#dmNhomNgach").change(function() {
            reload($(this).parents(".ui-tabs-panel"), "BangLuong/Index?nhom="+$(this).val());
        });
    });
</script>
