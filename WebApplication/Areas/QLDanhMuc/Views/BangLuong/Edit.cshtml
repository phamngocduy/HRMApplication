            @Html.LabelFor(model => model.idNhomNgach, "Nhóm ngạch")
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.idNhomNgach)
            @Model.dmNhomNgachVienChuc.tenNhomNgachVienChuc (@Model.dmNhomNgachVienChuc.maNhomNgachVienChuc)
        </div>

        <p>
            <input class="dialog" type="submit" value="Lưu" />
        </p>
    </fieldset>
}
