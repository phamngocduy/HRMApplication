        TD_id = int.Parse(dsNLD.MaTD);
        var tdUCV = db.tdBangCap.Where(bc => bc.UngVien_id == TD_id);
        if (tdUCV.Count() <= 0)
        {
            for (int i = 0; i < lttnnqdData1.Count(); i++)
            {
                MLTTChung += lttnnqdData1[i];
            }
        }
        else
        {
            for (int i = 0; i < lttnnqdData2.Count(); i++)
            {
                MLTTChung += lttnnqdData2[i];
            }
        }
    }catch{}
}


