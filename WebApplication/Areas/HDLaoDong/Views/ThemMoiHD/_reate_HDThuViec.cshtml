        } ]);
        Bac.trigger("connect", [Baclink, function () {
            Bac.trigger("change");
        } ]);
    });
    Bac.change(function () {
        HSLuong.trigger("connect", "~/HDLaoDong/dmBangLuong/List_HSLuong?idBac=" + $(this).val());
    });

    $(".custom-combobox-input").removeClass("ui-state-default");
