 <script>
     function daychange() {
         var index = document.getElementById('ThoiHanHDTV').selectedIndex;
         var m = parseInt(document.getElementById('ThoiHanHDTV').options[index].text);
         if (m > 0) {
             var d1Value = document.getElementById('NgayHieuLuc').value;
             var data = d1Value.split('/');
             var dd = parseInt(data[0], 10);
             var mm = parseInt(data[1], 10);
             var yyyy = parseInt(data[2], 10);
             var date = new Date(yyyy, mm - 1, dd);
