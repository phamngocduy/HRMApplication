@model IEnumerable<HRM.QLBHXH.Models.dmMucLuongToiThieuVung>
@{
    ViewBag.Title = "Danh mục Mức lương tối thiểu vùng - BHXH";
}
<h2>
    Mức lương tối thiểu vùng</h2>
<div>
    @Html.ActionLink("Trở về màn hình Nhân viên BHXH", "Index2", "NhanVienBHXH")
</div>
<p>
    @Html.ActionLink("Thêm mức lương tối thiểu vùng - BHXH", "Create")
</p>
<table id="dmMucLuongToiThieuVung">
    <thead>
        <tr>
            <th style="text-align: center" nowrap>
                STT
            </th>
            <th style="text-align: center" nowrap>
                Thuộc vùng
            </th>
            <th style="text-align: center" nowrap>
                Trạng thái
            </th>
            <th style="text-align: center" nowrap>
                Ngày bắt đầu
            </th>
            <th style="text-align: center" nowrap>
                Ngày kết thúc
            </th>
            <th style="text-align: center" nowrap>
                Mức lương tối thiểu vùng (VNĐ)
            </th>
           
            <th style="text-align: center" nowrap>
                Ghi chú
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                
            <tr>
                <td style="text-align: center" nowrap>
                    @Html.DisplayFor(modelItem => item.STT)
                </td>
                <td style="text-align: center" nowrap>
                    @Html.DisplayFor(modelItem => item.ThuocVung)
                </td>
                <td nowrap>
                    @if (item.TrangThai == true)
                    {
                        <span><b>Đang áp dụng</b> </span>
                    }
                    else
                    {
                        <span></span>
                    }
                </td>
                <td style="text-align: center" nowrap>
                    @item.NgayBatDau.ToShortDateString()
                </td>
                <td style="text-align: center" nowrap>
                  
                    @if (@item.NgayKetThuc != null)
                    {
                        @item.NgayKetThuc.GetValueOrDefault().ToShortDateString()
                    }
                </td>
                <td nowrap>
                    @String.Format("{0:#,##0}", item.MucLuong)
                   
                </td>
                <td nowrap>
                    @Html.DisplayFor(modelItem => item.GhiChu)
                </td>
                <td>
            <a href="dmMucLuongToiThieuVung/Delete?id=@item.id" title="Xoá"><span class="ui-icon ui-icon-trash" style="display:inline-block"/></a>
            <a href="dmMucLuongToiThieuVung/Edit?id=@item.id" title="Chỉnh sửa"><span class="ui-icon ui-icon-pencil" style="display:inline-block"/></a>
            </td>
            </tr>
        }
    </tbody>
</table>
<script src="/Scripts/datatables/FixedColumns.js"></script>
<script src="/Content/datatables/DataTableFixedHeader.js"></script>
<script>
    $(document).ready(function () {
        var oTable = $("#dmMucLuongToiThieuVung").dataTable({
            "bAutoWidth": true,
            "bStateSave": true,
            "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "bJQueryUI": true,
            "sScrollY": "100%",
            "sScrollX": "100%"
        });

        new $.fn.dataTable.FixedColumns(oTable, {
            "iLeftColumns": 3,
            "iRightColumns": 1
        });

    });

</script>
