@using HRM.Webpages.Helpers
@model HRM.Accounts.Models.ChangePasswordModel

<h3>Đổi mật khẩu đăng nhập</h3>

@using (Html.BeginForm("ChangePassword", "Manage")) {
@Html.ValidationInfo()
<fieldset>
    <legend>Change Password Form</legend>
    <ol>
        <li>
            @Html.LabelFor(m => m.OldPassword, "Mật khẩu hiện tại")
            @Html.PasswordFor(m => m.OldPassword)
        </li>
        <li>
            @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới")
            @Html.PasswordFor(m => m.NewPassword)
        </li>
        <li>
            @Html.LabelFor(m => m.ConfirmPassword, "Nhập lại mật khẩu mới")
            @Html.PasswordFor(m => m.ConfirmPassword)
        </li>
    </ol>
    <input type="submit" value="Đổi mật khẩu" />
</fieldset>
}
