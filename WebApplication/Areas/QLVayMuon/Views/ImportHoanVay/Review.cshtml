@using HRM.QLVayMuon.Controllers
@using HRM.Webpages.Helpers
@using HRM.QLVayMuon.Models
@{
    ViewBag.Title = "Review";
    string link = ViewBag.link;
}
@Html.ActionLink("Trở về nhập dữ liệu hoàn vay","Index", "ImportHoanVay")

<div >  <a  href="../importhoanvay/Importexcel?link=@link" > 
<input type="button" name="Go" id="Go" value="Nhập dữ liệu"  /></a> 
</div>




<h3 align="center">Danh sách hoàn vay từ tệp tin Excel</h3>

<table id = "HoanVay" border="1">
    <thead>
        <tr>
            @foreach (System.Data.DataColumn col in Model.Columns) { 
                <th>@col.Caption </th>
            } 
        </tr>
    </thead>

    <tbody>
        @foreach(System.Data.DataRow row in Model.Rows) { 
        <tr>
            @foreach (var cell in row.ItemArray) {

                <td>@cell.ToString()</td>
            } 
        </tr>
    }          
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $("#HoanVay").dataTable({
            "bAutoWidth": true,
            "bStateSave": true,
            "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]
        });
    });
</script>