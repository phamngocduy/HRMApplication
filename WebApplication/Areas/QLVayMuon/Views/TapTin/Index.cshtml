@using HRM.Webpages.Helpers
@using HRM.QLVayMuon.Models
@using HRM.QLVayMuon.Models
@model IEnumerable<HRM.QLVayMuon.Models.TapTin>

@{
    var idhs = ViewBag.idhs;
    var khoanvay =ViewBag.tenkhoanvay;
    ViewBag.Title = "Index";
   
    
}


<p>

    @Html.ActionLink("Thêm tệp tin của hồ sơ", "Create", new { kv=khoanvay }, null)<br />
   @* <a href="Index"><span class="ui-icon ui-icon-home" style="display:inline-block"/></a>*@
   
</p>
<table id="TapTin">
<thead>
    <tr>
        <th style="display:none;"></th>
          <th >
            @Html.VN("Tên giấy tờ")
        </th>
        <th>
            @Html.VN("tepDinhKem")
        </th>
    <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model)
{
    <tr>
        <td style="display:none;">@String.Format("{0}", item.laThuMuc ? "TM" : "TT")</td>
           <td>
     
                @Html.DisplayFor(model => item.tengiayto)
        </td>
        <td>
                <a href="../taptin/Download?id=@item.id" title="Download">@item.tepDinhKem</a>
            
        </td>
       <td>
       <a href="../taptin/Delete?id=@item.id" title="Xóa"><span class="ui-icon ui-icon-trash" style="display:inline-block"/></a>
       
       
       </td>
    </tr>
}
</tbody>
</table>

<script>
   @Html.dataTables("TapTin")

</script>

